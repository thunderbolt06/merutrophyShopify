{% doc %}
  @prompt
    3 vertical video horizontally stacked
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 9 / 16;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-video-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
      padding: {{ block.settings.padding_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-video-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..3) %}
    {% liquid
      assign video_key = 'video_' | append: i
      assign video = block.settings[video_key]
    %}

    <div class="ai-video-item-{{ ai_gen_id }}">
      <div class="ai-video-wrapper-{{ ai_gen_id }}">
        {% if video %}
          <video
            class="ai-video-{{ ai_gen_id }}"
            {% if block.settings.autoplay %}autoplay{% endif %}
            {% if block.settings.loop %}loop{% endif %}
            {% if block.settings.muted %}muted{% endif %}
            {% if block.settings.controls %}controls{% endif %}
            playsinline
          >
            <source src="{{ video.sources[0].url }}" type="{{ video.sources[0].mime_type }}">
          </video>
        {% else %}
          <div class="ai-video-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-video-empty-state-{{ ai_gen_id }}">
              Add video {{ i }}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

