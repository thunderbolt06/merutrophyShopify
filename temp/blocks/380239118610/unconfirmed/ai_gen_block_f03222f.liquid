{% doc %}
  @prompt
    An infinite 3 column grid of images
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-infinite-grid-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-infinite-grid-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.horizontal_padding }}px;
  }

  .ai-infinite-grid-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-infinite-grid-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-infinite-grid-item-{{ ai_gen_id }}:hover img {
    transform: scale(1.05);
  }

  .ai-infinite-grid-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-infinite-grid-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-infinite-grid-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-infinite-grid-container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
      padding: 0 {{ block.settings.horizontal_padding | times: 0.5 }}px;
    }
  }
{% endstyle %}

<infinite-grid-{{ ai_gen_id }} class="ai-infinite-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-infinite-grid-container-{{ ai_gen_id }}">
    {% for i in (1..12) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign image = block.settings[image_key]
      %}
      
      <div class="ai-infinite-grid-item-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
          >
        {% else %}
          <div class="ai-infinite-grid-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            {% if i == 1 %}
              <div class="ai-infinite-grid-empty-state-{{ ai_gen_id }}">
                Add images to populate the grid
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</infinite-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class InfiniteGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.container = this.querySelector('.ai-infinite-grid-container-{{ ai_gen_id }}');
        this.items = Array.from(this.querySelectorAll('.ai-infinite-grid-item-{{ ai_gen_id }}'));
        this.isInfiniteEnabled = {{ block.settings.enable_infinite_scroll }};
        this.observer = null;
      }

      connectedCallback() {
        if (this.isInfiniteEnabled && this.items.length > 0) {
          this.setupInfiniteScroll();
        }
      }

      setupInfiniteScroll() {
        const options = {
          root: null,
          rootMargin: '200px',
          threshold: 0.1
        };

        this.observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              this.loadMoreItems();
            }
          });
        }, options);

        const lastItem = this.items[this.items.length - 1];
        if (lastItem) {
          this.observer.observe(lastItem);
        }
      }

      loadMoreItems() {
        const itemsToAdd = this.items.slice(0, 6);
        
        itemsToAdd.forEach(item => {
          const clone = item.cloneNode(true);
          this.container.appendChild(clone);
        });

        this.items = Array.from(this.querySelectorAll('.ai-infinite-grid-item-{{ ai_gen_id }}'));
        
        if (this.observer) {
          this.observer.disconnect();
          const lastItem = this.items[this.items.length - 1];
          if (lastItem) {
            this.observer.observe(lastItem);
          }
        }
      }

      disconnectedCallback() {
        if (this.observer) {
          this.observer.disconnect();
        }
      }
    }

    customElements.define('infinite-grid-{{ ai_gen_id }}', InfiniteGrid{{ ai_gen_id }});
  })();
</script>

