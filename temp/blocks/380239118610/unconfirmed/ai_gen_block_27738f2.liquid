{% doc %}
  @prompt
    A small height block with Our Clients on left and ..see more button on the right
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clients-bar-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
    background-color: {{ block.settings.background_color }};
    gap: 20px;
  }

  .ai-clients-bar__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
    white-space: nowrap;
  }

  .ai-clients-bar__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-clients-bar__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-clients-bar__arrow-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (max-width: 749px) {
    .ai-clients-bar-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding | times: 0.8 }}px {{ block.settings.horizontal_padding | times: 0.8 }}px;
      gap: 12px;
    }

    .ai-clients-bar__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-clients-bar__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-clients-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <h2 class="ai-clients-bar__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
  
  {% if block.settings.button_link != blank %}
    <a href="{{ block.settings.button_link }}" class="ai-clients-bar__button-{{ ai_gen_id }}">
      {{ block.settings.button_text }}
      <span class="ai-clients-bar__arrow-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </span>
    </a>
  {% endif %}
</div>

